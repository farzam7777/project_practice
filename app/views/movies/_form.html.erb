<%= form_for @movie do |f| %>
  <%= f.label :title, "Title" %> <br>
  <%= f.text_field :title, class: "form-control" %> <br>

  <%= f.label :description, "Description" %> <br>
  <%= f.cktext_area :description, class: "form-control", ckeditor: { language: 'english'} %> <br>

  <%= f.label :trailor, "Trailor" %> <br>
  <%= f.text_field :trailor, class: "form-control" %> <br>

  <%= f.submit "Create", class: "btn btn-primary", style: "margin-bottom: 2%;" %>
<% end %>
